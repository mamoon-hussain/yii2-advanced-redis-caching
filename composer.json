{
  "name": "yiisoft/yii2-starter-kit",
  "description": "Yii2 Starter Kit Application Template",
  "keywords": [
    "yii2",
    "framework",
    "start",
    "cms",
    "application template",
    "yii2 advanced"
  ],
  "authors": [
    {
      "name": "Yusef",
      "email": "yusef@gmail.com"
    }
  ],
  "type": "project",
  "license": "BSD-3-Clause",
  "support": {
    "issues": "https://github.com/yii2-starter-kit/yii2-starter-kit/issues?state=open",
    "source": "https://github.com/yii2-starter-kit/yii2-starter-kit"
  },
  "require": {
    "php": ">=7.1.0",
    "ext-intl": "*",
    "yiisoft/yii2": "^2.0.13",
    "yiisoft/yii2-bootstrap": "^2.0.0",
    "yiisoft/yii2-swiftmailer": "^2.0.0",
    "yiisoft/yii2-authclient": "^2.0.0",
    "yiisoft/yii2-jui": "^2.0.0",
    "intervention/image": "^2.1",
    "vlucas/phpdotenv": "^2.0",
    "symfony/process": "^4.0",
    "guzzlehttp/guzzle": "^6.0",
    "2amigos/yii2-chartjs-widget" : "~2.0",
    "2amigos/yii2-date-picker-widget" : "~1.0",
    "2amigos/yii2-date-time-picker-widget" : "~1.0",
    "kartik-v/yii2-social": "@dev",
    "kartik-v/bootstrap-fileinput": "@dev",
    "kartik-v/bootstrap-star-rating": "@dev",
    "kartik-v/yii2-krajee-base": "dev-master",
    "kartik-v/yii2-widget-fileinput": "@dev",
    "kartik-v/yii2-widget-rating": "*",
    "kartik-v/yii2-widget-select2": "@dev",
    "kartik-v/yii2-widget-timepicker": "*",
    "understeam/yii2-fcm": "~0.1",
    "zircote/swagger-php": "*",
    "ramsey/uuid": "*",
    "codemix/yii2-localeurls": "*",
    "phpmailer/phpmailer": "*",
    "yiisoft/yii2-imagine": "^2.2",
    "davidhirtz/yii2-timeago": "*",
    "php-ffmpeg/php-ffmpeg": "^0.16.0",
    "kotchuprik/yii2-sortable-widgets": "*",
    "greenhost/backjob": "master-dev",
    "2amigos/yii2-tinymce-widget" : "~1.1",
    "kartik-v/yii2-grid": "@dev",
    "borales/yii2-phone-input": "*",
	"philippfrenzel/yii2fullcalendar":"*",
	"bower-asset/fullcalendar": "3.5.1"
  },
  "require-dev": {
    "yiisoft/yii2-debug": "^2.0.0",
    "yiisoft/yii2-gii": "^2.0.0",
    "yiisoft/yii2-faker": "^2.0.0",
    "codeception/codeception": "2.4.0",
    "codeception/verify": "^0.3.1"
  },
  "autoload-dev": {
    "psr-4": {
      "tests\\": "tests/"
    }
  },
  "suggest": {
    "trntv/yii2-debug-xhprof": "dev-master@dev"
  },
  "config": {
    "process-timeout": 1800,
    "optimize-autoloader": true,
	"fxp-asset": {
         "enable": true
  }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    },
	{
        "url": "https://github.com/greenhost/BackJob",
        "type": "vcs"
    }
  ],
  "archive": {
    "exclude": ["docs"]
  },
  "scripts": {
    "build:env": [
      "cp .env.dist .env"
    ],
    "build:app": [
      "@composer install",
      "echo 'waiting for mysql' && sleep 10",
      "console/yii app/setup --interactive=0"
    ],
    "docker:build": [
      "@build:env",
      "@docker:start",
      "docker-compose exec -T app composer run-script build:app",
      "docker-compose run -T --rm webpacker npm i npm@latest -g",
      "docker-compose run -T --rm webpacker npm install",
      "docker-compose run -T --rm webpacker npm run build",
      "echo \"All ok!\""
    ],
    "docker:start": [
      "docker-compose up --force-recreate -d"
    ],
    "docker:cleanup": [
      "docker-compose rm -fsv"
    ]
  }
}
